<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity2">
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="40dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        android:fontFeatureSettings="@string/common_google_play_services_notification_ticker"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/white"
        android:background="@color/blue"/>

    <EditText
        android:id="@+id/name_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="134dp"
        android:hint="Name"
        android:textColorHint="@color/grey3"
        android:layout_marginRight="12sp"
        android:layout_marginLeft="12sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:ems="10"/>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="99dp"
        android:textColorHint="@color/grey3"
        tools:layout_editor_absoluteY="134dp"
        android:layout_marginRight="12sp"
        android:layout_marginLeft="12sp"
        android:hint="E-mail"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:ems="10"/>

    <EditText
        android:id="@+id/password_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginRight="12sp"
        android:layout_marginLeft="12sp"
        android:textColorHint="@color/grey3"
        android:hint="Password"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:ems="10"/>
    <EditText
        android:id="@+id/confirm_password_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginRight="12sp"
        android:layout_marginLeft="12sp"
        android:textColorHint="@color/grey3"
        android:hint="Password"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:ems="10"/>

    <RadioGroup
        android:id="@+id/radio_grp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="@color/grey3"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:orientation="horizontal"
        >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Teacher"
                android:id="@+id/radio_Teacher"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                />

           <RadioButton
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="CR"
               android:id="@+id/radio_cr"
               android:layout_weight="1"
               android:layout_marginLeft="15sp"
               android:textSize="20dp"
               />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Student"
                android:id="@+id/radio_student"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:autoSizeTextType="uniform"
                />


    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:ems="10"/>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12sp"
        android:layout_weight=".8"
        android:autoSizeTextType="uniform"
        android:background="@color/AppBlue"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:ems="10"/>

    <TextView
        android:id="@+id/back_to_log_in_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".45"
        android:ems="10"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/AppBlue"
        android:text="Back to log in page."
        />

</LinearLayout>